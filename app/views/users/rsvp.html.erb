<% provide(:title, @user.name) %>
<h1>Confirm Your Attendance</h1>
<div class="row">
  <aside class="span4">
    <section>
      <h1>	
        <%= @user.name %>
      </h1>
    </section>
  </aside>
  <div class="span8">
    <% if @user.guests.any? %>
	<table>
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages' %>
	  <%= render 'shared/rsvp' %>
      <%= f.submit "Save changes", class: "btn btn-large btn-primary" %>
    <% end %>
    </table>
	<% end %>
  </div>
</div>