
<h2 class="browntext">In total you've invited <%= @guests.count %> people:</h2>
<h4 class="greentext">A total of <%= pluralize(@guests.where(wedding: nil).count, "guest") %> have not yet responded.</h4>
<h4 class="greentext">A total of <%= pluralize(@guests.where(wedding: false).count, "guest") %> are not attending.</h4>
<h5 class="browntext">Download the guest list: <%= link_to "CSV", guests_path(format: "csv") %> | <%= link_to "Excel", guests_path(format: "xls", page: params[:page]) %> </h5>
<h3 class="greentext">Attending (<%= @guests.where(wedding: true).count %>)</h3>
<table class="table">
    <tr><h3 class="greentext">Full Guest List</h3></tr>
		<th>Guest</th>
		<th>Wedding</th>
		<th>Brunch</th>
		<th>Bus</th>
		<th>Dietary Restrictions</th>
		<th>Delete?<th>
		
	</tr>
	<%= will_paginate %>
	<% @guests.each do |f| %>	
	<tr>
		<td><%= f.name %></td>
		<td><%= human_boolean(f.wedding) %></td>
		<td><%= human_boolean(f.brunch) %></td>
		<td><%= human_boolean(f.bus) %></td>
		<td><%= f.diet %></td>
		<td><%= f.delete %></td>


	</tr>
	<% end %>
</table>
